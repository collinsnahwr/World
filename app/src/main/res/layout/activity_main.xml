<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Please Enter The Details Below"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Project Name"
        android:textSize="10dp"
        android:layout_below="@+id/intro"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/mng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name of the project manager"
        android:textSize="10dp"
        android:layout_below="@+id/name"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Project Location"
        android:textSize="10dp"
        android:layout_below="@+id/mng"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Project Budget"
        android:textSize="10dp"
        android:layout_below="@+id/location"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/teams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Project Teams"
        android:textSize="10dp"
        android:layout_below="@+id/budget"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Project Starting Date"
        android:textSize="10dp"
        android:layout_below="@+id/teams"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Project Deadline Date"
        android:textSize="10dp"
        android:layout_below="@+id/start"
        android:inputType="text"
        />

    <Button
        android:id="@+id/insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/finish"
        android:layout_marginTop="4dp"
        android:text="Add data"
        android:textSize="10dp" />

    <Button
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/insert"
        android:layout_marginTop="0dp"
        android:text="Update data"
        android:textSize="10dp" />

    <Button
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update"
        android:layout_marginTop="3dp"
        android:text="Delete data"
        android:textSize="10dp" />



    <Button
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delete"
        android:layout_marginTop="-4dp"
        android:text="View data"
        android:textSize="10dp" />

    <Button
        android:id="@+id/sendbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendMsg"
        android:layout_below="@+id/view"
        android:text="Set Alarm"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Project"
       android:layout_below="@+id/sendbutton"/>

    <EditText
        android:id="@+id/hour_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hour"
        android:textSize="10dp"
        android:layout_below="@+id/button"
        android:inputType="time"
        />
    <EditText
        android:id="@+id/minute_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Minutes"
        android:textSize="10dp"
        android:layout_below="@+id/hour_edit_text"
        android:inputType="time"
        />
    <Button
        android:id="@+id/set_alarm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/minute_edit_text"
        android:layout_marginTop="4dp"
        android:text="SET ALARM"
        android:textSize="5dp" />

</RelativeLayout>